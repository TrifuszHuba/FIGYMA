<Window x:Class="home_page.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:home_page"
        mc:Ignorable="d"
        Background="#343A40"
        Title="Home" Height="1080" Width="1920"
        FontSize="36">

    <Grid Height="1080" Width="1920">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Width="400" Height="1080" Background="#DEE2E6">
            <ComboBox  Width="398" Height="55" Margin="0,10,0,15"  Background="#ADB5BD">
                <ComboBoxItem Content="Típus" IsSelected="True" Visibility="Collapsed" />
                <CheckBox Content="Férfi"/>
                <CheckBox Content="Nő"/>
            </ComboBox>
            <ComboBox  Width="398" Height="55" Margin="0,10,0,15"  Background="#ADB5BD">
                <ComboBoxItem Content="Állapot" IsSelected="True" Visibility="Collapsed" />
                <ComboBoxItem Content="Kitűnő" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="Újszerű" Selected="ComboBoxItem_Selected"/>
