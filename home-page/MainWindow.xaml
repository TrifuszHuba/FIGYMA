            </ComboBox>
            <ComboBox Width="398" Height="55" Margin="0,0,0,15" Background="#ADB5BD">
                <ComboBoxItem Content="Évjárat" IsSelected="True" Visibility="Collapsed"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="" Width="100" TextAlignment="Center"/>
                    <Label Content="-tól"></Label>
                    <TextBox Text="" Width="100" TextAlignment="Center"/>
                    <Label Content="-ig"/>
                </StackPanel>
            </ComboBox>
            <ComboBox Width="398" Height="55" Margin="0,0,0,15" Background="#ADB5BD">
                <ComboBoxItem Content="Ellenőrizhető előélet" IsSelected="True" Visibility="Collapsed"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="Igen"/>
                    <RadioButton Content="Nem" Margin="100,0,0,0"/>
                </StackPanel>
            </ComboBox>
            <ComboBox Width="398" Height="55" Margin="0,0,0,15" Background="#ADB5BD">
                <ComboBoxItem Content="valami" IsSelected="True" Visibility="Collapsed"/>
