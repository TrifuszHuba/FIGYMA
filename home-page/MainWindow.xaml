                <ComboBoxItem Content="valami" IsSelected="True" Visibility="Collapsed"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
            </ComboBox>
            <ComboBox Width="398" Height="55" Margin="0,0,0,20" Background="#ADB5BD">
                <ComboBoxItem Content="valami" IsSelected="True" Visibility="Collapsed"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
                <ComboBoxItem Content="***" Selected="ComboBoxItem_Selected"/>
